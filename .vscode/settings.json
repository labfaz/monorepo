{
  // tab extension
  "editor.tabSize": 2,

  // vscode-icons-team.vscode-icons config
  "vsicons.associations.folders": [
    {
      "icon": "hook",
      "extensions": [
        "hooks"
      ]
    },
    {
      "icon": "api",
      "extensions": [
        "strapi"
      ]
    },
    {
      "icon": "app",
      "extensions": [
        "apps"
      ]
    },
    {
      "icon": "client",
      "extensions": [
        "client"
      ]
    },
    {
      "icon": "arangodb",
      "extensions": [
        "seeds"
      ]
    },
    {
      "icon": "e2e",
      "extensions": [
        "migrations"
      ]
    },
    {
      "icon": "temp",
      "extensions": [
        "jobs"
      ]
    },
    {
      "icon": "www",
      "extensions": [
        "insomnia"
      ]
    },
    {
      "icon": "sso",
      "extensions": [
        "Admin",
        ".adminjs"
      ]
    }
  ],
  "vsicons.associations.files": [
    {
      "icon": "jest",
      "format": "svg",
      "extensions": [
        "setupTests.js",
        "jest.mock.js",
        "jest.setup.js",
        "jest.config.json",
        "jest.json",
        ".jestrc",
        ".jestrc.js",
        ".jestrc.json",
      ],
      "filename": true,
      "filenamesGlob": ["jest.config", "jest.config.babel"],
      "extensionsGlob": ["js", "cjs", "mjs"],
    },
    {
      "icon": "reactjs",
      "extensions": [
        "craco.config.js"
      ],
      "filename": true,
      "format": "svg",
    },

  ],

  // always have exactly one newline at the end of files
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "god.tsconfig": "./tsconfig.json",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.tsx": "${capture}.test.tsx,${capture}.stories.tsx,${capture}.style.tsx"
  },
  "explorer.fileNesting.expand": false,
  // "typescript.tsdk": "node_modules/typescript/lib"
}
